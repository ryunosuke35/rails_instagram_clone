<!DOCTYPE html>
<html>
  <head>
    <title>InstagramClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <ul class="top_menu row">
          <% if logged_in? %>
            <li class="col-md-6 col-md-12"><%= link_to "プロフィール", user_path(current_user.id) %></li>
            <li class="col-md-6 col-md-12"><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
          <% else %>
            <li class="col-md-6 col-md-12"><%= link_to "新規登録", new_user_path %></li>
            <li class="col-md-6 col-md-12"><%= link_to "ログイン", new_session_path %></li>
          <% end %>
        </ul>
    </header>
    <div class="container">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <%= yield %>
    </div>
    <footer>
      <p>instagram clone</p>
    </footer>
  </body>
</html>
