<%= form_with(model: picture, local: true, url:form_choose_new_or_edit) do |form| %>

  <%= form.hidden_field :id %>
  <% if picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h2>
      <ul>
      <% picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">


    <table>
      <tr>
        <td><%= image_tag(picture.image.url) if picture.image && picture.image.url %></td>
      </tr>
      <tr>
        <td><%= form.text_area :content, size: "50x6" %></td>
      </tr>
      <tr>
        <td><%= form.file_field :image %></td>
      </tr>
      <tr>
        <td><%= form.hidden_field :image_cache %></td>
      </tr>
    </table>
  </div>

  <div class="actions">
    <%= form.submit "確認画面へ" %>
  </div>
<% end %>
