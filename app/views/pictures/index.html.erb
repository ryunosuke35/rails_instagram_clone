<p id="notice"><%= notice %></p>

<h1>投稿</h1>

<table>
  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.image.url %></td>
        <td><%= link_to '詳細', picture_path(picture.id) %></td>
        <td><%= link_to '編集', edit_picture_path(picture.id) %></td>
        <td><%= link_to '削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿', new_picture_path %>
