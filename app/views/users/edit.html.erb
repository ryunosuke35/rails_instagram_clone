<p>プロフィール画像編集</p>

<%= form_with(model: @user, url:user_path(@user.id), local: true) do |form| %>

  <div class="field" >
    <%= image_tag @user.profile_picture.url %>

    <%= form.label :名前 %>
    <%= form.text_field :name %>
    <%= form.label :メールアドレス %>
    <%= form.email_field :email %>
    <%= form.label :パスワード %>
    <%= form.password_field :password %>
    <%= form.label :確認用パスワード %>
    <%= form.password_field :password_confirmation %>
    <%= form.label :プロフィール画像 %>
    <%= form.file_field :profile_picture %>
    <%= form.hidden_field :image_cache %>

    <%= form.submit "変更" %>
  </div>
  <%= link_to '戻る', user_path(params[:id]) %>

<% end %>
